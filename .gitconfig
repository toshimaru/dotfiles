[user]
  name = toshimaru
  email = me@toshimaru.net
[core]
  excludesfile = ~/.global_ignore
  autocrlf = input
  editor = vim
[rebase]
  autosquash = true
  autostash = true
  abbreviateCommands = true
[init]
  defaultBranch = main
[ghq]
  root = ~/src
[alias]
  fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*
  st = status -s -b
  stat = status
  sw = switch
  swc = switch -c
  br = branch
  bra = branch -a
  brd = branch -d
  df = diff
  dft = difftool
  showname = show --name-only
  poh = push -u origin HEAD
  ad = add
  co = checkout
  c = commit --verbose
  ca = commit -a --verbose
  f = fetch
  fp = fetch --prune
  r = remote
  rv = remote -v
  l = log --stat --abbrev-commit
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lga = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  today = log --since=midnight --author='toshimaru' --oneline --all
  yesterday = log --since=yesterday.midnight --until=midnight --author='toshimaru' --oneline --all
  ls = ls-files
  rb = rebase
  rbi = rebase --interactive
  rbc = rebase --continue
  rba = rebase --abort
  spush = svn dcommit
  spull = svn rebase
  sfetch = svn fetch
  pick = cherry-pick
  wip = commit --allow-empty -m '[ci skip] WIP'
  # require peco (https://github.com/peco/peco)
  lsc = !git ls-files | peco | xargs cat
  lso = !git ls-files | peco | xargs open
  lsv = !git ls-files | peco | xargs -o vim
  swb = !git branch  --sort=-committerdate | tr -d '* ' | peco | xargs git switch
  grepv = "!f() { git grep ${1} | peco | awk -F ':' '{print $1}' | xargs -o vim; }; f"
  grep-ghopen = "!git grep -n ${1} | peco | awk -F ':' '{print $1}' | sed 's/:/#L/' | xargs -I PATH hub browse -- blob/master/PATH"
  # require gh command (https://cli.github.com/)
  ci = !gh pr checks
  open = !gh browse
  o = open
  open-issue = !gh issue list -w
  open-pr = !gh pr list -w
  pro = !gh pr view -w || gh pr create -w
  list-pr = !gh pr list
  list-issue = !gh issue list
  list-myissue = !gh issue list --assignee @me
  # require GitHub Desktop App (https://desktop.github.com/)
  app = !github .
