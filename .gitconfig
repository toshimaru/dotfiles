[user]
  name = toshimaru
  email = me@toshimaru.net
[color]
  ui = auto
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*
  st = status -s -b
  stat = status
  br = branch
  bra = branch -a
  brd = branch -d
  df = diff
  dft = difftool
  showname = show --name-only
  pushu = push -u
  ad = add
  co = checkout
  cobrd = !CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD) && git checkout $1 && git pull && git branch -d $CURRENT_BRANCH
  c = commit --verbose
  ca = commit -a --verbose
  f = fetch
  r = remote
  rv = remote -v
  l = log --stat --abbrev-commit
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lga = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  today = log --since=midnight --author='toshimaru' --oneline --all
  yesterday = log --since=yesterday.midnight --until=midnight --author='toshimaru' --oneline --all
  ls = ls-files
  lso = !git ls-files | peco | xargs open
  lsv = !git ls-files | peco | xargs -o vim
  rc = rebase --continue
  spush = svn dcommit
  spull = svn rebase
  sfetch = svn fetch
  k = !gitk
  grepv = "!f() { git grep ${1} | peco | awk -F ':' '{print $1}' | xargs -o vim; }; f"
  grep-ghopen = "!git grep -n ${1} | peco | awk -F ':' '{print $1}' | sed 's/:/#L/' | xargs -I PATH hub browse -- blob/master/PATH"
  # require hub command (http://hub.github.com/)
  ci = ci-status -v
  open = browse
  open-issue = !hub browse -- pull/${1}
  issues = browse -- issues
  myissues = issue -a toshimaru
  pro = !hub browse -- pull/$(git rev-parse --abbrev-ref HEAD)
  prs = browse -- pulls
  ls-issues = !hub issue | grep -v '/pull/'
  ls-pulls = !hub issue | grep '/pull/'
[ghq]
  root = ~/src
